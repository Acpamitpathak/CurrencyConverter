from pathlib import Path

def save_markdown_response(response_text: str, output_path: str = "evaluation_output.md"):
    # Clean and format your output
    md_content = "# 📝 Evaluation Report\n\n"

    # Use section headings and formatting
    sections = response_text.split("\n\n")
    for section in sections:
        lines = section.strip().splitlines()
        if lines:
            heading = lines[0].strip()
            md_content += f"## {heading}\n"
            for line in lines[1:]:
                key_value = line.split(":", 1)
                if len(key_value) == 2:
                    key, value = key_value
                    md_content += f"- **{key.strip()}**: {value.strip()}\n"
                else:
                    md_content += f"{line}\n"
            md_content += "\n"

    # Save to file
    Path(output_path).write_text(md_content, encoding="utf-8")
    print(f"Markdown saved to {output_path}")